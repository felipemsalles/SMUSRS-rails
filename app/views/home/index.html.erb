    <h1>Juntos na batalha contra o HIV!</h1>
    <h2>Serviço disponível 24 horas.</h2>
    <%= link_to "Meu perfil", dashboard_path, class: "main-btn" %>
  </div>
</section>

<section id="services" class="services mt-5 mb-3 py-3">
  <div class="container">
    <div class="section-title">
      <h2 class="text-center">Serviços</h2>
    </div>
    <div class="row">
      <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
        <div class="service shadow">
          <div class="icon">
              <i class="fas fa-question"></i>
          </div>
