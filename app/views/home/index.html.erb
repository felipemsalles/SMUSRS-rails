      <div class="col-lg-4 col-md-6 d-flex align-items-stretch mt-4 mt-lg-0">
        <div class="service shadow">
          <div class="icon">
              <i class="fas fa-hand-holding-heart"></i>
          </div>
          <h4><%= link_to "Sobre o projeto", services_path %></h4>
