<section class="contact">
  <div class="container">

    <div class="section-title text-center mt-5">
      <h2>Contato</h2>
      <p>Entre em contato conosco para receber atendimento!</p>
    </div>

    <div class="row">
      <div class="col-lg-6">
        <div class="row">
          <div class="col-md-12">
            <div class="contact-box">
              <i class="fas fa-question"></i>
              <h3>Dúvidas Frequentes</h3>
              <p>Saiba as principais dúvidas dos pacientes!</p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="contact-box mt-4">
              <i class="fas fa-envelope"></i>
              <h3>Envie um Email</h3>
              <p>smusrs@gmail.com</p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="contact-box mt-4">
              <i class="fas fa-phone"></i>
              <h3>Ligue</h3>
              <p>+55 21 91234-5678</p>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-6">
        <%= simple_form_for(@doubt, method: :post, url: enviar_duvida_path, remote: true) do |f| %>
          <div class="form-row">
            <div class="col-md-6 form-group">
              <%= f.input :name, class: "form-control", placeholder: "Nome" %>
            </div>
            <div class="col-md-6 form-group">
              <%= f.input :email, class: "form-control", placeholder: "E-mail" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.input :subject, class: "form-control", placeholder: "Assunto" %>
          </div>
          <div class="form-group">
            <%= f.input :message, class: "form-control", placeholder: "Sua mensagem" %>
          </div>
          <div class="cont">
            <%= f.button :submit, "Enviar Contato", id: "contact-button", class: "doubt-button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
