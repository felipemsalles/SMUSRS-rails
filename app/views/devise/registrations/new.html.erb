<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="register-parent">
    <div class="register">
      <div class="register-title">
        <h2>SOS HIV</h2>
      </div>

      <div class="form-group">
        <%= f.input :name, label: 'Nome', placeholder: "Nome Completo" %>
      </div>
      <div class="form-group">
        <%= f.input :age, label: 'Idade', placeholder: "Idade" %>
      </div>
      <div class="form-group">
        <%= f.input :gender, label: 'Gênero', collection: [["masculino", 'Masculino'], ["feminino", 'Feminino']], label_method: :second, value_method: :first, prompt: "Selecione..." %>
      </div>
      <div class="form-group">
        <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, placeholder: "Insira seu email" %>
      </div>
      <div class="form-group">
        <%= f.input :password, label: 'Senha', required: true, hint: ("Mínimo de #{@minimum_password_length} caracteres" if @minimum_password_length), input_html: { autocomplete: "new-password" }, placeholder: "Insira sua senha" %>
      </div>
      <div class="form-group">
        <%= f.input :password_confirmation, label: 'Confirmação de senha', required: true, input_html: { autocomplete: "new-password" }, placeholder: "Confirme sua senha" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Cadastrar", class: "submit-button" %>
      </div>
    </div>
  </div>
<% end %>
