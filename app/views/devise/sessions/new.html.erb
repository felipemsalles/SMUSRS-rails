<div class="login">
  <div class="login-form">
    <div class="login-form-wrapper">
      <div class="login-title">
        <h2>Log In</h2>
        <%= link_to "Inscreva-se", new_user_registration_path %>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div class="form-group">
            <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
          </div>
          <div class="form-group">
            <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Login", class: "login-form-submit" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="banner-login">
    <%= image_tag('hiv.jpg') %>
    <h2>SOS HIV</h2>
  </div>
</div>

