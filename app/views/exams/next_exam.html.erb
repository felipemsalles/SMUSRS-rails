<div class="main-content-title">
  <h2>PRÓXIMO EXAME</h2>
</div>

<br>

<h5>Nome do Paciente</h5>
<div><%= @exam.pacient %></div>

<br>

<h5>Título</h5>
<div><%= @exam.title %></div>

<br>

<% if @exam.doctor? %>
  <h5>Nome do Médico</h5>
  <div><%= @exam.doctor %></div>

  <br>
<% end %>


<% if @exam.description? %>
  <h5>Descrição</h5>
  <div><%= @exam.description %></div>

  <br>
<% end %>

<h5>Endereço</h5>
<div><%= @exam.address %></div>

<br>

<h5>Data do Exame</h5>
<div><%= @exam.date.strftime("%d/%m/%Y as %H:%M") %></div>
