<%= simple_form_for(@appointment) do |f| %>
  <div class="form-group">
    <%= f.input :pacient, label: 'Nome do Paciente', placeholder: "Nome completo" %>
  </div>

  <div class="form-group">
    <%= f.input :title, label: 'Título', placeholder: "Título da consulta" %>
  </div>

  <div class="form-group">
    <%= f.input :doctor, label: 'Nome do Médico', placeholder: "Nome do médico" %>
  </div>

  <div class="form-group">
    <%= f.input :prescription_url, label: 'Link da Receita', placeholder: "Insira o link" %>
  </div>

  <div class="form-group">
    <%= f.input :description, label: 'Descrição' %>
  </div>

  <div class="form-group">
    <%= f.input :address, label: 'Endereço', placeholder: "Endereço da consulta" %>
  </div>

  <div class="form-group">
    <%= f.input :date, label: 'Data da Consulta' %>
  </div>

  <%= button_tag "#{f.object.persisted? ? 'Atualizar Consulta' : 'Criar Consulta'}", class: "btn btn-blue waves-effect waves-light mr-1" %>
<% end %>
